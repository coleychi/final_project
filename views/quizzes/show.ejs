<html>
<head>
	<title>QuizQuiz</title>
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<link rel="stylesheet" type="text/css" href="/css/font-awesome.min.css">
	<script type="text/javascript" src="http://code.jquery.com/jquery-1.12.2.min.js"></script>
	<script type="text/javascript" src="/js/quizquiz.js"></script>
	<script type="text/javascript" src="/js/authforms.js"></script>


	<!-- facebook meta tags -->
	<meta property="og:title" content="<%= quiz.title %>" />
	<meta property="og:url" content="http://quizquizquiz.herokuapp.com/" />
	<meta property="og:description" content="<%= quiz.description %>" />
	<!-- <meta property="og:image" content="" />   -->

</head>

<% include ../partials/header_partial.ejs %>


<div id="quiz-info">
	<div class="left">
		<img src="<%= quiz.authorIconUrl %>" class="img-thumb">
		<span><a href="/users/profile/<%= quiz.authorId %>"><%= quiz.author %></a></span>
	</div>

	<div class="right">
	<h2><%= quiz.title %></h2>
	<p><%= quiz.description %></p>
	</div>

	<div class="side-panel">
		<li><i class="fa fa-facebook" id="facebook-share"></i></li>
		<li><i class="fa fa-twitter" id="twitter-share"></i></li>

		<% if (locals.userid === quiz.authorId ) { %>
			<li>
				<form action="/quizzes/deletequiz/<%= quiz.id %>?_method=DELETE" method="POST" name="deleteQuiz">
					<i class="fa fa-trash-o" id="delete-button" onclick="document.deleteQuiz.submit()"></i>
				</form>


			</li>
		<% } %>
	</div>


</div>

<div id="quiz-container" class="hide">

	<% for (var i = 0; i < quiz.questions.length; i++) { %>

		<section class="q-<%= (i + 1) %>">

			<div class="question">
				<b><%= quiz.questions[i].questionText %></b><br>
			</div>

			<div class="options">

			<% for (var j = 0; j < quiz.questions[i].responseOptions.length; j++) { %>

				<div class="option" id="<%= quiz.questions[i].responseOptions[j].points %>">
					<%= quiz.questions[i].responseOptions[j].text %>

				</div>

				<%#= quiz.questions[i].responseOptions[j] %>

			<% } %>

			</div> <!-- closes options -->

		</section> <!-- closes .q-n-->

	<% } %>
</div>

<div id="result-container">

	<!-- <h2>Your Result: Vanilla</h2>

	<p> Vanilla ice cream is delicious... and so are you. </p>

	<div class="share">
		<button>Facebook</button>
	</div> -->
	
</div>



</div><!-- closes #content-container -->

<script type="text/javascript" src="../js/evaluatequiz.js"></script>

<% include ../partials/footer_partial.ejs %>